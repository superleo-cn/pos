# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Home.index
# Login page
GET     /login                                	Auth.index
POST	/loginJson								Auth.loginJson
# User Operation
*		/users									Users.index
*		/users/list								Users.list
*		/users/view/{id}						Users.view
*		/users/delete/{id}						Users.delete
# Food Operation
*		/foods/listJson/{id}					Foods.listJson
# Consumption Operation 
*		/consumptions/listJson/{id}				Consumptions.listJson
# Cash Operation 
*		/cashs/listJson/{id}					Cashs.listJson
# Transaction Operation 
POST	/transactions/store						Transactions.store
# ConsumeTransaction Operation 
POST	/consumeTransactions/store				ConsumeTransactions.store
# CashTransaction Operation 
POST	/cashTransactions/store					CashTransactions.store

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
